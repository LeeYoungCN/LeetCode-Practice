{
    "version": "2.0.0",
    "type": "shell",
    "options": {
        "cwd": "${workspaceFolder}/build/"
    },
    "tasks": [
        {
            "label": "cmake",
            "command": "cmake",
            "options": {
                "cwd": "${workspaceFolder}/build/"
            },
            "args": [
                ".."
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make",
            "options": {
                "cwd": "${workspaceFolder}/build/"
            },
            "command": "make",
            "args": [],
            
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cmake & make",
            "dependsOn": [
                "cmake",
                "make"
            ],
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Compile C++",
            "command": "g++",
            "type": "shell",
            "args": [
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "-I",
                "${workspaceFolder}/include",
                "-Wall",
                "-o",
                "${workspaceFolder}/bin/LeetCodePractice"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Run",
            "options": {
                "cwd": "${workspaceFolder}/bin/"
            },
            "dependsOn": [
                "cmake & make"
            ],
            "command": "./LeetCodePractice",
            "args": [],
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "clean",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/build/*",
                "${workspaceFolder}/bin/*"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
