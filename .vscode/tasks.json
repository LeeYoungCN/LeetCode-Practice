{
    "version": "2.0.0",
    "type": "shell",
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "tasks": [
        {
            "label": "Clean",
            "options": {
                "cwd": "${workspaceFolder}/script/"
            },
            "command": "./cmake_clean.sh",
            "detail": "清除CMake生成文件",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Config & Build",
            "options": {
                "cwd": "${workspaceFolder}/script/"
            },
            "command": "./cmake_build.sh",
            "detail": "使用cmake命令创建makefile,并生成可执行文件",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build",
            "command": "cmake --build build --target all",
            "detail": "根据makefile生成可执行文件和库文件",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run",
            "dependsOn": [
                "Build"
            ],
            "command": "./bin/LeetCodePractice*",
            "args": [],
            "detail": "运行程序",
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "Build Tool",
            "options": {
                "cwd": "${workspaceFolder}/Tools"
            },
            "command": "./build_tool.sh",
            "args": [
                "leetcode_file"
            ],
            "detail": "创建工具",
            "problemMatcher": [
                "$gcc"
            ],
        }
    ]
}
