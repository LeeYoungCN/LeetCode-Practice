{
    "version": "2.0.0",
    "type": "shell",
    "options": {
        "cwd": "${workspaceFolder}/build/"
    },
    "tasks": [
        {
            "label": "cmake",
            "command": "cmake",
            "args": [".."],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            }
        },
        {
            "label": "make",
            "command": "make",
            "args": [],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            }
        },
        {
            "label": "cmake & make",
            "dependsOn":[
                "cmake",
                "make",
            ],
            "problemMatcher": [
                "$tsc"
            ],
        },
        {
            "label": "Compile C++",
            "command": "g++",
            "type": "shell",
            "args": [
                "-g",
                "./src/*.cpp",
                "-I",
                "./include",
                "-Wall",
                "-o",
                "${workspaceFolder}/bin/LeetCodePractice"
            ],
            "group": {
                "kind": "build",
                "isDefault": true,  // 不为true时ctrl shift B就要手动选择了
            },
            "problemMatcher": [
                "$tsc", // 捕捉编译时终端里的报错信息到问题面板中，修改代码后需要重新编译才会再次触发
            ]
        },
        {
            "label": "Run",
            "options": {
                "cwd": "${workspaceFolder}/bin/"
            },
            "command": "./LeetCodePractice",
            "args": [],
            "problemMatcher": [
                "$tsc"
            ],
        }
    ]
}