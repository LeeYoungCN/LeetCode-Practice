{
    "version": "2.0.0",
    "type": "shell",
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "tasks": [
        {
            "label": "Configure this project",
            "command": "cmake ",
            "args": [
                "-DCMAKE_TOOLCHAIN_FILE=./cmake/toolchain.cmake",
                "-S",
                ".",
                "-B",
                "./build",
                "-G",
                "MinGW Makefiles"
            ],
            "detail": "使用cmake命令创建makefile",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build",
            "command": "cmake --build build --target all",
            "detail": "根据makefile生成可执行文件和库文件",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Configure & Build",
            "dependsOn":[
                "Configure this project",
                "Build",
            ],
            "detail": "生成可执行文件和库文件",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run",
            "dependsOn": [
                "Confige this project",
                "Build"
            ],
            "command": "./bin/LeetCodePractice.exe",
            "detail": "运行程序",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/build/*",
                "${workspaceFolder}/bin/*"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
