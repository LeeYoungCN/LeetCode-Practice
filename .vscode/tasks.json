{
    "version": "2.0.0",
    "type": "shell",
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "tasks": [
        {
            "label": "Clean",
            "command": "rm -rf ./build/",
            "args": [],
            "detail": "清除CMake生成文件",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "cmake_windows",
            "command": "cmake ",
            "args": [
                "-DCMAKE_TOOLCHAIN_FILE=./cmake/win_toolchain.cmake",
                "-S",
                ".",
                "-B",
                "./build",
                "-G",
                "MinGW Makefiles"
            ],
            "dependsOn": [
                "Clean"
            ],
            "detail": "Windows使用cmake命令创建makefile",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "cmake_Mac",
            "command": "cmake",
            "args": [
                "-DCMAKE_TOOLCHAIN_FILE=./cmake/mac_toolchain.cmake",
                "-S",
                ".",
                "-B",
                "./build"
            ],
            "dependsOn": [
                "Clean"
            ],
            "detail": "Mac使用cmake命令创建makefile",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build",
            "command": "cmake --build build --target all",
            "detail": "根据makefile生成可执行文件和库文件",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Configure & Build",
            "dependsOn": [
                "Configure this project",
                "Build"
            ],
            "detail": "生成可执行文件和库文件",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run",
            "dependsOn": [
                "Confige this project",
                "Build"
            ],
            "command": "./bin/LeetCodePractice*",
            "detail": "运行程序",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
