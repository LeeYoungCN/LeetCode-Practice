{
    "version": "2.0.0",
    "type": "shell",
    "options": {
        "cwd": "${workspaceFolder}/build/"
    },
    "tasks": [
        {
            "label": "cmake",
            "command": "cmake",
            "args": [
                "-G",
                "MinGW  Makefiles",
                ".."
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make",
            "command": "make",
            "args": [],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cmake & make",
            "dependsOn": [
                "cmake",
                "make"
            ],
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Compile C++",
            "command": "g++",
            "type": "shell",
            "args": [
                "-g",
                "./src/*.cpp",
                "-I",
                "./include",
                "-Wall",
                "-o",
                "${workspaceFolder}/bin/LeetCodePractice"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Run",
            "options": {
                "cwd": "${workspaceFolder}/bin/"
            },
            "command": "./LeetCodePractice",
            "args": [],
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}